{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "header-max-length": [
      0,
      "always",
      100
    ],
    "scope-case": [
      0,
      "always",
      [
        "pascal-case",
        "sentence-case"
      ]
    ],
    "subject-case": [
      0,
      "always",
      [
        "sentence-case"
      ]
    ]
  }
}
